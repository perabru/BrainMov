                android:drawablePadding="10dp"
                android:hint="Profissão"
                android:padding="15dp"
                android:textColor="@color/white"
                android:textColorHighlight="@color/white"
                android:textColorHint="@color/white" />


            <EditText
                android:id="@+id/txtMedicamentosPAA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/shapeemail"
                android:drawableLeft="@drawable/ic_add_circle_black_24dp"
                android:drawablePadding="10dp"
                android:hint="Medicamentos"
                android:padding="15dp"
                android:textColor="@color/white"
                android:textColorHighlight="@color/white"
                android:textColorHint="@color/white" />


            <EditText
                android:id="@+id/txtOrtesesPAA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/shapeemail"
                android:drawableLeft="@drawable/ic_accessibility_black_24dp"
                android:drawablePadding="10dp"
                android:hint="Órteses"

                android:padding="15dp"
                android:textColor="@color/white"
                android:textColorHighlight="@color/white"
                android:textColorHint="@color/white" />

            <EditText
